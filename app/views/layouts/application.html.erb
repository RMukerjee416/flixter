<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <meta name="viewport" content="width=device-width, initial-scale=0.75, maximum-scale=0.90">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.5.4/video-js.css" rel="stylesheet">
  </head>

  <body>

  <div id="flex-content-container">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Flixter", root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto mt-2 mt-md-0">
      <li class="navbar-item">
        <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
      </li>
    </ul>
    <ul class="navbar-nav">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
      </li>
      <li class ="nav-item">
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
      </li>
      <% end %>
    </ul>
  </div>
  </nav>

  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <%= yield %>

  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <h6><b><u>Teachers</u></b></h6>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
          <br class="clr" />
          <br class="clr" />
        </div>
        <div class="col-12 col-sm-3">
          <h6><b><u>About</u></b></h6>
          <br />
          <%= link_to 'Team', team_path %>
          <br />
          <%= link_to 'Careers', careers_path %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
          <br class="clr" />
          <br class="clr" />
        </div>
        <div class="col-12 col-sm-3">
          <h6><b><u>Contact</u></b></h6>
          <br />
          raj_muk@hotmail.com
          <br />
          One Test Ave.
          <br />
          Toronto, ON M1M 1M1
          <br class="clr" />
          <br class="clr" />
        </div>
        <div class="col-12 col-sm-3 social">
          <h6><b><u>Social</u></b></h6>
          <br />
          <%= link_to 'https://github.com/RMukerjee416/' do %>
            <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          <%= link_to 'https://facebook.com' do %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
          <% end %>
          <%= link_to 'https://www.linkedin.com' do %>
            <span class="fa fa-linkedin-square fa-2x social-button"></span>
          <% end %>
          <br class="clr" />
          <br class="clr" />
        </div>
      </div>
    </div>
  </div>

  <script src='https://vjs.zencdn.net/7.5.4/video.js'></script>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
